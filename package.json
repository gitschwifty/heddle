{
  "name": "heddle",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "bun build --compile --no-env-file --target=bun-mac-arm64 src/cli/index.ts --outfile dist/heddle",
    "build:linux-x64": "bun build --compile --no-env-file --target=bun-linux-x64 src/cli/index.ts --outfile dist/heddle-linux-x64",
    "build:linux-arm64": "bun build --compile --no-env-file --target=bun-linux-arm64 src/cli/index.ts --outfile dist/heddle-linux-arm64",
    "typecheck": "bun run tsc --noEmit",
    "lint": "bunx biome check --write src/ test/",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.48",
    "smol-toml": "^1.6.0"
  }
}
